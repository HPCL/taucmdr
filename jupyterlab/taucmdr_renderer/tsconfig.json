{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES6",
    "outDir": "./lib",
    "lib": ["es6", "es2015.promise", "dom"],
    "types": ["node"],
    "allowJs": true
  },
  "include": ["src/*"]
}
